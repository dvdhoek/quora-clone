<center>
<div id="login-div">
	<div style="width: 50%; float: right; text-align: center" id="border-left">
	<h3>LOGIN</h3>
		<form method=post action='/login'>
			<input id="index-form" type=text placeholder="Username" name="username"><br>
			<input id="index-form" type=password placeholder="Password" name="password"></br>
			<input id="index-form" type=submit value="Login"> 
		</form>
	</div>

	<div id="align-left">
		<div style="width: 50%; float: left; text-align: center">

			<h3>SIGNUP</h3>
			<form method=post action='/signup'>
				<input id="index-form" type=text placeholder="Username" name="user[username]"><br>
				<input id="index-form" type=text placeholder="Email" name="user[email]"><br>
				<input id="index-form" type=text placeholder="First name" name="user[first_name]"><br>
				<input id="index-form" type=text placeholder="Last name" name="user[last_name]"><br>
				<input id="index-form" type=password placeholder="Password" name="user[password]"></br>
				<input id="index-form" type=submit value = "Sign Up"> 
			</form>
						<% if flash[:alert]%>
				<p id="error-signup"><%= flash[:alert] %></p>
			<% end %> 
		</div>
</div>
</center>